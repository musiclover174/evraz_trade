.footer
  mt 49px
  mb 52px
  padding 0 65px
  display flex
  justify-content space-between
  align-items center
  &__left
    display flex
    align-items center
  &__logoover
    ib()
    mr 31px
  &__logo
    filter invert(100%)
  &__copy
    ib()
    fontify 15px 600 21px
  &__dextra
    color black
    font-family Verdana, Geneva, sans-serif
    fontify 9px 400 14px
    text-transform uppercase
    letter-spacing .18em
    pos relative
    span
      db()
      pos absolute
      t 2px
      r calc(100% + 9px)
      size 71px 21px
      background-image url("data:image/png;base64,")
      background-repeat no-repeat
      background-position center
      bgc $dark
      transition .7s background
    &:hover span
      bgc $orange
      
      
.popup
  w calc(100% - 200px)
  bgc $grey
  padding 58px 147px 59px 63px
  &__title
    color black
    font-family $officina
    fontify 48px 400 52px
  &__subtitle
    color black
    mt 32px
    max-width 630px
    fontify 15px 400 21px
  &__form
    &_top
      mt 40px
    .common__label
      opacity .5
    .common__label,
    .help__hint,
    .common__filename,
    .fakecheckbox__label,
    .fakecheckbox__label a:not([class])
      color black
    .fakecheckbox__label a:not([class])
      border-bottom 2px solid $orange
      transition .7s border
      &:hover
        border-color transparent
    .common__filename:before
      filter invert(100%)
    .fakecheckbox__label:before
      border-color black
  &#item
    //max-height 70vh
    overflow auto
    padding 0
    bgc transparent

.card
  &__over
    display flex
  &__imgover
    w 368px
    mr 59px
  &__info
    flex-grow 1
    mt -8px
    max-width 698px
  &__title
    font-family $officina
    fontify 48px 400 52px
    mb 32px
  &__download
    mt 22px
    pos relative
    z-index 1
    pl 65px
    pb 7px
    h 170px
    w 535px
    display flex
    flex-direction column
    justify-content center
    align-items flex-start
    &:before
      content ""
      pos absolute
      z-index -1
      l 0
      t 0
      h 100%
      w 100%
      bgc $grey
    &-type
      color $orange
      fontify 12px 600 21px
    &-href
      color black
      fontify 15px 600 21px
      border-bottom 2px solid $orange
      transition .7s border
      &:hover
        border-color transparent
  &__btn
    pos absolute
    t 50%
    r -35px
    mt -58px
  &__examples
    mt 46px
    display flex
    flex-wrap wrap
    justify-content space-between
    mb -34px
  &__example
    w calc(50% - 16px)
    mb 34px
    &-img
      w 100%
    &-name
      fontify 15px 400 21px
      mt 10px
  &__imgs
    mt 69px