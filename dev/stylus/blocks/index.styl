  bgc $dark
  padding 58px 147px 69px 64px
  pos relative
  @media $lDesktopSmall
    & > .common__row_flex
      flex-direction column
    & > .common__row_flex > .common__col
      w 100%
      & + .common__col
        mt 27px
  @media $desktopMin
    margin 140px 0 0
    padding 41px 147px 41px 47px
  @media $LandscapeMax
    mt 100px
  @media $LandscapeMin
    padding 41px 47px
  @media $PortraitMax
    ml -35px
    w calc(100% + 70px)
  &__title
    color white
    font-family $officina
    fontify 48px 400 52px
    @media $LandscapeMax
      fontify 32px 400 42px
  &__types
    mt 34px
  &__type
    pl 27px
    pos relative
    @media $PortraitMax
      pl 0
    &:before
      content ""
      pos absolute
      l 2px
      t 4px
      bgc alpha(white, .1)
      h 30px
      w 1px
      @media $PortraitMax
        dn()
    & + &
      mt 39px
    &-title
      color white
      fontify 15px 600 21px
    &-text
      mt 18px
      color white
      fontify 15px 400 21px
      @media $LandscapeMax
        fontify 14px 400 21px
    &-phones
      mt 18px
      @media $PortraitMin
        display flex
        flex-direction column
    &-phone
      ib()
      color white
      fontify 15px 400 21px
      @media $LandscapeMax
        fontify 14px 400 21px
      & + &
        ml 30px
        @media $PortraitMin
          mt 10px
          ml 0
    &-mail
      mt 18px
      ib()
      color white
      fontify 15px 400 21px
      border-bottom 1px solid transparent
      transition .7s border
      @media $LandscapeMax
        fontify 14px 400 21px
      &:hover
        border-color currentColor
  &__form
    mt 33px
  &__btn
    pos absolute
    b -35px
    r -181px 
    @media $desktopMin
      b 0
      r -168px
    @media $LandscapeMin
      pos static
      mt 30px